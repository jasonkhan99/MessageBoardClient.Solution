@model List<MessageBoardClient.Models.Post>
<h1>Posts:</h1>
<hr/>

@if (@Model.Count == 0)
{
  <h5>There are no Posts in the system</h5>
  <h5>Add a post by viewing a Thread</h5>
}
else
{
  <table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Body
        </th>
        <th>
            Creation Date
        </th>
        <th>
            Parent Thread
        </th>
        <th>
            Parent Board
        </th>
    </tr>
  @foreach(Post post in @Model)
  {
    <tr>
      <td>
        @Html.ActionLink($"{post.Title}", "Details", new { id = post.PostId })
      </td>
    </tr>
  }
  </table>
}